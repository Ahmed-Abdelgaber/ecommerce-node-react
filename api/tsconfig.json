{
  "compilerOptions": {
    "target": "ES2022", // Or a later version like "ES2023" for modern Node.js environments
    "module": "NodeNext", // Use Node's native ES modules or "CommonJS" if preferred
    "lib": ["ESNext"], // Include standard library definitions for the latest features
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./", // Root directory of your TypeScript source files
    "strict": true, // Enable all strict type-checking options for robust code
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "skipLibCheck": true, // Skip type checking of declaration files (e.g., node_modules)
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true, // Generate source maps for easier debugging
    "noImplicitAny": true, // Disallow 'any' type without explicit annotation
    "noUncheckedIndexedAccess": true, // Add 'undefined' to index signatures
    "isolatedModules": true, // Ensure each file can be compiled independently
    "moduleDetection": "force", // Force module detection for better type inference
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/core/*"],
      "@db/*": ["src/db/*"],
      "@modules/*": ["src/modules/*"],
      "@int/*": ["src/integrations/*"]
    },
    "baseUrl": "." // Base URL for resolving non-relative module names
  },
  "include": ["src/**/*.ts"], // Include all .ts files within the 'src' directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and the output directory
}
